<launch>
  <arg name="use_lidar" default="true" />
  <arg name="use_camera" default="true" />
  <arg name="use_imu" default="true" />

  <!-- Realsense D455 at front -->
  <group if="$(arg use_camera)">
    <node pkg="tf2_ros" type="static_transform_publisher" name="tf_base_to_camera_front"
    args="0.35 0.048 0.34 0 0 0 base_link camera_link" />
  </group>

  <!-- Velodyne VLP-16 -->
  <group if="$(arg use_lidar)">
    <node pkg="tf2_ros" type="static_transform_publisher" name="tf_base_to_velodyne"
    args="0.2 0 0.585 0 0.005 0 base_link velodyne" />
  </group>

  <!-- Xsens IMU -->
  <group if="$(arg use_imu)">
    <node pkg="tf2_ros" type="static_transform_publisher" name="tf_base_to_imu"
    args="0.3 0 0.19 0 0 0 base_link imu_link" />
  </group>

</launch>