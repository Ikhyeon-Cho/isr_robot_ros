<launch>
  <arg name="use_lidar" default="true" />
  <arg name="use_camera" default="true" />
  <arg name="use_imu" default="true" />

  <include file="$(find isr_m4)/launch/include/_sensors.launch">
    <arg name="use_lidar" value="$(arg use_lidar)" />
    <arg name="use_camera" value="$(arg use_camera)" />
    <arg name="use_imu" value="$(arg use_imu)" />
  </include>

  <!-- Rviz -->
  <node name="rviz_isr_m4" pkg="rviz" type="rviz" args="-d $(find isr_m4)/launch/rviz/isr_m4_sensor.rviz" />
</launch>