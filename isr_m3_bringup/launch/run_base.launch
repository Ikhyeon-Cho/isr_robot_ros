<launch>
  <arg name="use_joy" default="true" />
  <arg name="publish_odom_tf" default="true" />

  <!-- Run ISR-M3 Base -->
  <include file="$(find isr_m3_bringup)/launch/include/_m3_driver.launch">
    <arg name="publish_tf" value="$(arg publish_odom_tf)" />
  </include>

  <!-- Controller: Keyboard or Joystick -->
  <include if="$(arg use_joy)" file="$(find isr_m3_bringup)/launch/include/_joy.launch" />
  <include unless="$(arg use_joy)" file="$(find isr_m3_bringup)/launch/include/_keyboard.launch" />

</launch>